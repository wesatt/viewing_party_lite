<div id="whitespace">
  <center>

    <h1> Viewing Party Lite </h1>

    <h2> Register a New User </h2>

    <% flash.each do |type, msg| %>
      <div> <%= msg %> </div>
    <% end %>

    <div class="form">
      <%= form_with url: '/dashboard', method: :post, local: true do |f| %>
        <p><%= f.label "Name:  " %>
        <%= f.text_field :name %><br></p>
        <p><%= f.label "Email:  " %>
        <%= f.text_field :email %><br></p>
        <p><%= f.label "Password:  " %>
        <%= f.text_field :password %><br></p>
        <p><%= f.label "Confirm Password:  " %>
        <%= f.text_field :password_confirmation %><br></p>
        <p><%= f.submit "Create New User" %></p>
      <% end %>
    </div/>
  </center>
</div>
